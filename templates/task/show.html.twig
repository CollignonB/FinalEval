{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <h1>Task</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Creation_date</th>
                <td>{{ task.creationDate ? task.creationDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ task.deadline ? task.deadline|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ task.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="m-3">
        <a href="{{ path('task_edit', {'id': task.id}) }}" class = "btn btn-info">>Modifier</a>
        <a href=" {{ path('task_delete', {'id':task.id}) }}" class = "btn btn-info">Supprimer</a>
    </div>

{% endblock %}
